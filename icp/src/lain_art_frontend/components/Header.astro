      <!-- Single auth button (works for both desktop & mobile) -->
      <button id="auth-btn" class="auth-btn">Authenticate</button>
    </nav>

    <!-- Mobile Menu Button -->
    <div id="menu-btn" class="menu-btn">
      <span></span><span></span><span></span>
