<style>
  /* Vaporwave / Futurefunk Footer Styles */
  footer {
    width: 100%;
    background: rgba(12, 10, 27, 0.7);
    backdrop-filter: blur(12px) saturate(140%);
    border-top: 1px solid rgba(255, 92, 192, 0.4);
    box-shadow: 0 -2px 12px rgba(255, 92, 192, 0.3);
    padding: 2rem 1.5rem;
    color: #e9e6ff;
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.85rem;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    align-items: center;
    text-align: center;
  }

  .footer-logo {
    font-family: "Zen Dots", "IBM Plex Mono", monospace;
    font-size: 1.4rem;
    font-weight: bold;
    color: #fff;
    text-shadow: 0 0 6px #ff5dc0, 0 0 18px #ff2ea6, 0 0 36px #ff2ea6;
    letter-spacing: 0.05em;
  }

  .footer-nav {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .footer-nav a {
    color: #bfb8ff;
    text-decoration: none;
    font-weight: 600;
    position: relative;
    transition: color 0.2s ease;
  }

  .footer-nav a:hover {
    color: #ff5dc0;
    text-shadow: 0 0 8px #ff5dc0;
  }

  .footer-copy {
    color: #8886aa;
    font-size: 0.75rem;
  }

  @media (min-width: 768px) {
    .footer-container {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }
.footer-nav {
  display: flex;
  gap: 1.5rem;
  flex-wrap: wrap;
  justify-content: center;
}

.footer-nav a {
  color: #bfb8ff;
  text-decoration: none;
  font-weight: 600;
  position: relative;
  transition: color 0.2s ease, text-shadow 0.2s ease;
}

.footer-nav a::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: -4px;
  width: 0%;
  height: 2px;
  background: linear-gradient(90deg, #ff5dc0, #9747ff, #4cf3ff);
  transition: width 0.3s ease;
}

.footer-nav a:hover {
  color: #ff5dc0;
  text-shadow: 0 0 8px #ff5dc0;
}

.footer-nav a:hover::after {
  width: 100%;
}


</style>

<footer>
